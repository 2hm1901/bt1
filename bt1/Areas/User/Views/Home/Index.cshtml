<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stylized Table with Job Details</title>
    <style>
        /* Tạo đường viền cho bảng */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 16px;
            text-align: left;
        }

        /* Định dạng cho header */
        th, td {
            padding: 12px 15px;
            border: 1px solid #dddddd;
        }

        /* Tô màu background header */
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        /* Thêm hiệu ứng hover */
        tr:hover {
            background-color: #f1f1f1;
        }

        /* Điều chỉnh độ rộng của cột */
        td {
            white-space: nowrap; /* Ngăn việc xuống dòng trong ô */
        }

        th, td {
            text-align: center; /* Căn giữa nội dung trong bảng */
        }

        /* Căn chỉnh đặc biệt cho cột mô tả để nội dung không tràn */
        .description {
            text-align: left;
            white-space: normal; /* Cho phép dòng mô tả xuống dòng */
        }
    </style>
</head>
<body>
    <h3>List of Job</h3>
    @model List<Jobs>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date Post</th>
                <th>Deadline</th>
                @if (User.IsInRole("Candidate"))
                {
                    <th>Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.title</td>
                    <td class="description">@item.description</td>
                    <td>@item.price</td>
                    <td>@item.date</td>
                    <td>@item.deadline</td>
                    @if (User.IsInRole("Candidate")) {
                        <td>
                            <a style="
                        background-color: #4CAF50;
                        color: white;
                        padding: 8px 12px;
                        text-decoration: none;
                        border-radius: 4px;
                        font-size: 14px;
                        display: inline-block;
                            "asp-area="Jobseeker" asp-controller="Jobseeker" asp-action="Apply" asp-route-data="@item.id">Apply</a>
                        </td>
                    }
                </tr>
            }

        </tbody>
    </table>
</body>
</html>
