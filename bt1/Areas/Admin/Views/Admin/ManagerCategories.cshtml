﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Table</title>
    <style>
        /* Tạo đường viền cho bảng */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 16px;
            text-align: left;
        }

        /* Định dạng cho header */
        th, td {
            padding: 12px 15px;
            border: 1px solid #dddddd;
        }

        /* Tô màu background header */
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        /* Thêm hiệu ứng hover */
        tr:hover {
            background-color: #f1f1f1;
        }

        /* Điều chỉnh độ rộng của cột */
        td {
            white-space: nowrap; /* Ngăn việc xuống dòng trong ô */
        }

        th, td {
            text-align: center; /* Căn giữa nội dung trong bảng */
        }
    </style>
</head>
<body>
    @model List<Categories>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Status</td>
                    <td>
                        <a style="
                        background-color: #4CAF50;
                        color: white;
                        padding: 8px 12px;
                        text-decoration: none;
                        border-radius: 4px;
                        font-size: 14px;
                        display: inline-block;
                                " asp-controller="Admin" asp-action="EditCategories" asp-route-id="@item.Id">Edit</a>
                    
                        <a style="
                        background-color: #ff4d4d;
                        color: white;
                        padding: 8px 12px;
                        text-decoration: none;
                        border-radius: 4px;
                        font-size: 14px;
                        display: inline-block;
                            " asp-controller="Admin" asp-action="DeleteCategories" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div style="text-align: right; margin-top: 20px;">
        <a style="
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 16px;
            display: inline-block;
        " asp-controller="Admin" asp-action="CreateCategories">
            Create Categories
        </a>
    </div>

</body>
</html>
